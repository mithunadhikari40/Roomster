<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_in_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d3d9ca"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="np.com.mithunadhikari.roomster.signIn_signUp">


    <TextView
        android:id="@+id/roomster_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:text="ROOMSTER"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ff0000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/roomster_text"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:layout_marginTop="16dp"
        android:src="@mipmap/logo" />


    <TextView
        android:id="@+id/username_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/image"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Username : "

        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#0000ff" />

    <EditText
        android:id="@+id/usernameEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/image"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="0dp"
        android:hint="Enter username or email"
        android:inputType="textEmailAddress"

        android:maxLength="30"
        android:maxLines="1"
        android:textColor="#000000" />


    <TextView
        android:id="@+id/password_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/username_txt"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="33dp"
        android:text="Password : "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#0000ff" />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/usernameEdit"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="12dp"
        android:hint="Enter your password"
        android:inputType="textPassword"
        android:maxLength="72"
        android:maxLines="1"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editPassword"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:clickable="true"
        android:text="Forgot password"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#0000ff" />


    <Button
        android:id="@+id/signin_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editPassword"
        android:layout_marginLeft="20dp"
        android:background="#d9ddfe"
        android:clickable="true"
        android:onClick="onLogin"
        android:text="sign in"
        android:textAllCaps="false"
        android:textColor="#0000ff" />

    <TextView
        android:id="@+id/notHaveAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/signin_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="Do not have an account yet?"
        android:textColor="#ff0000"
        android:textSize="20dp" />

    <Button
        android:id="@+id/signup_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notHaveAccount"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="10dp"
        android:background="#d9ddfe"
        android:clickable="true"
        android:text="sign up"

        android:textAllCaps="false"
        android:textColor="#0000ff" />


</RelativeLayout>
